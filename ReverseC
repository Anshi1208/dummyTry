#include <stdio.h>
#include <string.h>

void reverseString(char* str) {
    int length = strlen(str);
    for (int i = length - 1; i >= 0; i--) {
        printf("%c", str[i]);
    }
}

int main() {
    char name[100];
    
    printf("Enter your name: ");
    scanf("%s", name);
    
    printf("Reversed name: ");
    reverseString(name);
    
    return 0;
}
